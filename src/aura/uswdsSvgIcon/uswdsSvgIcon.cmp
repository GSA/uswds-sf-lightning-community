<aura:component>
  <!-- http://spring-16.lightningdesignsystem.com/resources/lightning-svg-icon-component-helper/ -->

  <aura:attribute
    name="svgPath"
    default=""
    type="String"
    description="the path for the icon in the static resource, this will be use in a SVG use tag"
  />
  <aura:attribute
    name="class"
    default=""
    type="String"
    description="the class of this SVG tag, can be use for CSS purpose"
  />
  <aura:attribute
    name="assistiveText"
    default=""
    type="String"
    description="Description name of icon"
  />
  <span aura:id="container">
    <span aura:id="assistiveText" class="slds-assistive-text"
      >{!v.assistiveText}</span
    >
  </span>
</aura:component>
